<html x-token="{{{ token }}}">
<head>
  <title>YOMYPOPCORN</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css">
  <link href='http://fonts.googleapis.com/css?family=Montserrat:700' rel='stylesheet' type='text/css'>
  <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
  <script src="/assets/vendor.js"></script>
  <style type="text/css">
    body, html {
      font-family: "Montserrat", sans-serif;
      font-weight: 700;
      background: #924AB0;
      color: #fff
    }

    .turquoise {
      background-color: #1abc9c;
    }

    .emerald {
      background-color: #2ecc71;
    }

    .peter {
      background-color: #3498db;
    }

    .asphalt {
      background-color: #34495e;
    }

    .green {
      background-color: #16a085;
    }

    .sunflower {
      background-color: #f1c40f;
    }

    .belize {
      background-color: #2980b9;
    }

    .wisteria {
      background-color: #8e44ad;
    }

    .alizarin {
      background-color: #e74c3c;
    }

    .amethyst {
      background-color: #9b59b6;
    }

    .list-item {
      height: 59px;
      line-height: 60px;
      font-size: 19px;
      box-sizing: border-box;
      vertical-align: middle;
      color: #fff;
      position: relative;
      overflow: hidden;
      border-top: 1px solid #AD6AC9;
    }

    .list-item:last-child {
      border-bottom: 1px solid #AD6AC9;
    }

    .list-item.no-border {
      border: 0px solid transparent;
    }

    .list-item-remove-leave {
      transform: scale(1);
      opacity: 1;
      transition: transform .2s, opacity 0.2s;
    }

    .list-item-remove-leave.list-item-remove-leave-active {
      transform: scale(0.5);
      opacity: 0.01;
    }

    .list-btn {
      cursor: pointer;
      text-align: center;
    }

    .list-item-title {
      white-space: nowrap;
      margin-right: 100px;
      margin-left: 24px;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .list-item-end {
      position: absolute;
      right: 0px;
      top: 17px;
      width: 100px;
    }

    .btn {
      cursor: pointer;
      border: 1px solid #fff;
      padding: 6px 9px;
      border-radius: 4px;
      font-size: 12px;
      line-height: 1.1em;
      display: inline-block;
    }

    input[type="search"] {
      width: 100%;
      box-sizing: border-box;
      padding: 1.5em 1em;
      border: 0px solid transparent;
      background: #7E4097;
      font-size: 24px;
      text-align: center;
    }

    ::-webkit-input-placeholder { /* WebKit browsers */
      color: #fff;
    }
    :-moz-placeholder { /* Mozilla Firefox 4 to 18 */
      color: #fff;
      opacity: 1;
    }
    ::-moz-placeholder { /* Mozilla Firefox 19+ */
      color: #fff;
      opacity: 1;
    }
    :-ms-input-placeholder { /* Internet Explorer 10+ */
      color: #fff;
    }

    .feed-item {
      margin: 2em;
    }

    .feed-item-header,
    .feed-item-footer {
      height: 60px;
      font-size: 16px;
      line-height: 60px;
      vertical-align: middle;
      padding: 0 16px;
    }

    .feed-item-header {
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
    }

    .feed-item-body {
      height: 280px;
      background-repeat: no-repeat;
      background-size: cover;
      position: relative;
    }

    .feed-item-body .title {
      position: absolute;
      bottom: 0;
      left: 0;
      padding: 1em;
    }

    .feed-item-footer {
      border-bottom-left-radius: 10px;
      border-bottom-right-radius: 10px;
    }

    .title-small {
      font-size: 14px;
    }

    .title {
      font-size: 30px;
    }

    .shadow {
      background: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%);
      height: 100%;
      width: 100%;
    }

    .tabs {
      overflow: hidden;
    }

    .tab {
      width: 50%;
      float: left;
      text-align: center;
      box-sizing: border-box;
      cursor: pointer;
      padding: 1em 0;
      background: #8E44AD;
      color: #572B69;
    }

    .tab.is-active {
      background-color: #924AB0;
      color: #fff
    }

    .search-input {
      position: relative;
    }

    .search-cancel {
      cursor: pointer;
      position: absolute;
      right: 1em;
      top: 30px;
      font-size: 36px;
    }

    .empty-state {
      padding: 2em;
      text-align: center;
      opacity: 0.5;
    }

  </style>

</head>
<body>
  {{{ content }}}
</body>
</html>
